@model ISPROJ2VetSeeker.Models.ServiceTypeModel

@{
    ViewBag.Title = "Create Service";
    Layout = "~/Views/Shared/_LayoutVet.cshtml";
}

@Styles.Render("~/Content/StyleSheetPetRegister.css")
<link href="~/Content/StyleSheetPetRegister.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <br />
        <br />
        <h2 style="text-align:center; margin-bottom:40px;">Create Service</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="Create">
            <div class="col-lg-1"></div>
            <div class="col-lg-5">

                <div class="form-group">
                    <span class="control-label" style="font-weight:700; padding-right:165px;">Service Name</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ServiceName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <!--Check for error-->

                <div class="form-group">
                    <span class="control-label" style="font-weight:700; padding-right:250px;">Price</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="col-lg-1"></div>

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10" style="margin-top:50px">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}