@model ISPROJ2VetSeeker.Models.PetModel

@{
    ViewBag.Title = "PetRegister";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}


@Styles.Render("~/Content/StyleSheetPetRegister.css")
<link href="~/Content/StyleSheetPetRegister.css" rel="stylesheet" type="text/css" />

<style>

    textarea {
        height: 250px;
        width: 100%;
        border: 1px solid #dedede;
        border-radius: 10px;
        background-color: #f3f3f3;
        padding: 5px;
    }
</style>

@using (Html.BeginForm("PetRegister", "Pet", FormMethod.Post, new { enctype = "multipart/form-data", @name = "image" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <br />
        <br />
        <h2 style="text-align:center; margin-bottom:40px; font-weight:bold">Add Pet</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="Create">
            <div class="col-lg-1"></div>
            <div class="col-lg-5">
                <div class="form-group">
                    <span class="control-label col-md-12" style="font-weight:700">Pet Profile Picture</span>
                    <div class="col-md-10">
                        <input id="PetProfilePic" title="Upload a product image"
                               type="file" name="file" />
                    </div>
                </div>
                <div class="form-group">
                    <span class="control-label" style="font-weight:700; padding-right:200px;">Pet Name</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PetName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.PetName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Breed, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @{ List<SelectListItem> listItems = new List<SelectListItem>();
                            listItems.Add(new SelectListItem { Text = "Labrador Retriever" });
                            listItems.Add(new SelectListItem { Text = "Doberman Pinscher" });
                            listItems.Add(new SelectListItem { Text = "German Shepherd" });
                            listItems.Add(new SelectListItem { Text = "Chihuahua" });
                            listItems.Add(new SelectListItem { Text = "Shih Tzu" });
                            listItems.Add(new SelectListItem { Text = "Dalmatian" });
                            listItems.Add(new SelectListItem { Text = "Golden Retriever" });
                            listItems.Add(new SelectListItem { Text = "Pug" });
                            listItems.Add(new SelectListItem { Text = "Poodle" });
                            listItems.Add(new SelectListItem { Text = "Beagle" });
                            listItems.Add(new SelectListItem { Text = "Philippine Shorthair (Puspin)" });
                            listItems.Add(new SelectListItem { Text = "Persian" });
                            listItems.Add(new SelectListItem { Text = "Siamese Cat" });
                            listItems.Add(new SelectListItem { Text = "Himalayan Cat" });
                            listItems.Add(new SelectListItem { Text = "Russian Blue" });
                            listItems.Add(new SelectListItem { Text = "Exotic Shorthair" });
                            listItems.Add(new SelectListItem { Text = "Bengal Cat" });
                            listItems.Add(new SelectListItem { Text = "British Shorthair" });
                            listItems.Add(new SelectListItem { Text = "American Curl" });
                            listItems.Add(new SelectListItem { Text = "American Shorthair" });
                            listItems.Add(new SelectListItem { Text = "Others" });}
                        @Html.DropDownListFor(model => model.Breed, listItems, "Select a Breed", new { htmlAttributes = new { @class = "form-control" }, style = "width:225px;font-size:15px;float:left;", required = "required" })
                        @Html.ValidationMessageFor(model => model.Breed, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="font-size:17px; text-align:left">
                        @Html.RadioButtonFor(model => model.Sex, "Male", new { htmlAttributes = new { @class = "form-control", required = "required" } }) Male
                        @Html.RadioButtonFor(model => model.Sex, "Female", new { htmlAttributes = new { @class = "form-control", required = "required" } }) Female
                        <br />
                        <div style="text-align:center!important">
                            @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger", @style = "font-size:14px" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Color, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control", required = "required", @type = "date", @Value = DateTime.Now.ToString("yyyy'-'MM'-'dd") } })
                        @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
            <div class="col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.PetChipNo, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PetChipNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PetChipNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Guardian, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Guardian, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Guardian, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Date Added and Date Modified-->


            </div>

            <div class="col-lg-1"></div>

            <div class="form-group">
                <div class=" col-lg-offset-1 col-md-10">
                    <input type="submit" value="Add Pet" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}