<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VetSeeker | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/Layout.css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #79B4B7; border:none;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="margin: 25px 10px">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("VetProfile", "Accounts")">
                    <img src="~/Images/logo-long-cream.png" alt="VetSeeker Logo" width="220px" style="margin-top:7px; margin-bottom:5px" />
                </a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right;">
                    <li id="dropdown">@Html.ActionLink("Invoices", "VetInvoices", "Invoice", null, new { style = "color:white" })</li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="dropdown">Clinics <span class="fa fa-angle-down" style="color:white"></span></a>
                        <ul class="dropdown-menu">
                            <li id="droplist">@Html.ActionLink("Add Clinic", "RegisterClinic", "Clinic", null, new { style = "color:#717171" })</li>
                            <li id="droplist">@Html.ActionLink("View Clinic", "ViewClinics", "Clinic", null, new { style = "color:#717171" })</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="dropdown">Schedules <span class="fa fa-angle-down" style="color:white"></span></a>
                        <ul class="dropdown-menu">
                            <li id="droplist">@Html.ActionLink("Create Schedule", "CreateSchedule", "Schedule", null, new { style = "color:#717171" })</li>
                            <li id="droplist">@Html.ActionLink("View Schedules", "ViewSchedules", "Schedule", null, new { style = "color:#717171" })</li>
                            <li id="droplist">@Html.ActionLink("Client Feedback", "ViewClientFeedback", "User", null, new { style = "color:#717171" })</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="dropdown">Services <span class="fa fa-angle-down" style="color:white"></span></a>
                        <ul class="dropdown-menu">
                            <li id="droplist">@Html.ActionLink("Create Service", "CreateService", "Service", null, new { style = "color:#717171" })</li>
                            <li id="droplist">@Html.ActionLink("List of Services", "ListofServices", "Service", null, new { style = "color:#717171" })</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle fa fa-user-circle" data-toggle="dropdown" href="#" style="color: white; font-size: 3rem; margin: 15px 2px"></a>                         <ul class="dropdown-menu">
                            <li style="font-size: 2rem;margin: 15px 7px; cursor: pointer;">@Html.ActionLink("My Profile", "VetProfile", "Accounts", null, new { style = "color:#717171;" }) </li>

                            <li style="font-size: 2rem; margin: 15px 7px; cursor: pointer;">@Html.ActionLink("Log Out", "LogOut", "Accounts", null, new { style = "color:#717171" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top: 60px; margin-bottom: 60px;">
        <br />
        <br />

        @RenderBody()


    </div>
    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <img src="~/Images/VetSeekerLogo.png" alt="VetSeeker Logo" width="220px" />
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <h3>@Html.ActionLink("About Us", "About", "Home", null, new { style = "color:white" })</h3>
                </div>
                <div class="col-md-3">
                    <h3>Contact Us</h3>

                    <span class="contact"><i class="fa fa-phone"></i> +63 922 897 0020</span>
                    <br />
                    <span class="contact"><i class="fa fa-envelope"></i>   VetSeeker@gmail.com</span>

                </div>
                <div class="row">
                    <div class="col-lg-12" style="text-align:center;">
                        <p>&copy; @DateTime.Now.Year - VetSeeker</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $(".dropdown").hover(function () {
                $(this).toggleClass("open");
            });
        })</script>
</body>
</html>
