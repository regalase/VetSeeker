<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VetSeeker | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/Layout.css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="margin: 25px 10px">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <img src="~/Images/logo-long-cream.png" alt="VetSeeker Logo" width="220px" style="margin-top:7px; margin-bottom:5px" />


            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right;">
                    <li style="font-size: 2rem; margin: 30px 2px; cursor: pointer; color:white;"><span>Have an account? @Html.ActionLink("Log In here", "Login", "Accounts", null, new { style = "color:white; font-weight:bold; text-decoration:underline" })</span></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <img src="~/Images/VetSeekerLogo.png" alt="VetSeeker Logo" width="220px" />
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <h3>@Html.ActionLink("About Us", "About", "Home", null, new { style = "color:white" })</h3>
                </div>
                <div class="col-md-3">
                    <h3>Contact Us</h3>

                    <span class="contact"><i class="fa fa-phone"></i> +63 922 897 0020</span>
                    <br />
                    <span class="contact"><i class="fa fa-envelope"></i>   VetSeeker@gmail.com</span>

                </div>
                <div class="row">
                    <div class="col-lg-12" style="text-align:center">
                        <p>&copy; @DateTime.Now.Year - VetSeeker</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
