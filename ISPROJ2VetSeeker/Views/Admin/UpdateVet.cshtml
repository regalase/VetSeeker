@model ISPROJ2VetSeeker.Models.UserModel
@{ ViewBag.Title = "UpdateVet";

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Styles.Render("~/Content/StyleSheetPetRegister.css")
