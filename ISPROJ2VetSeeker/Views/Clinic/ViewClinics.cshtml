@model IEnumerable<ISPROJ2VetSeeker.Models.ClinicModel>


@{
    ViewBag.Title = "ViewClinics";
    Layout = "~/Views/Shared/_LayoutVet.cshtml";
}

@Styles.Render("~/Content/StyleSheetPetRegister.css")
@Styles.Render("~/Content/Table.css")
<link href="~/Content/StyleSheetPetRegister.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Table.css" rel="stylesheet" type="text/css" />
<h2 style="margin-bottom:30px">My Clinics</h2>
<h5 style="padding-bottom:30px">@Html.ActionLink("Add Clinic", "RegisterClinic", null, new { @class = "btn btn-primary", style = "float:right; width:150px; padding:5px 10px;" })</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table>
        <tr class="head">
            <th>
                Clinic
            </th>
            <th>
                Unit/House #
            </th>
            <th>
                Street
            </th>
            <th>
                Barangay
            </th>
            <th>
                City
            </th>
            <th>
                Clinic Email
            </th>
            <th>
                Clinic Contact No.
            </th>
            <th>

            </th>
        </tr>
        @foreach (var ClinicModel in Model)
        {
            <tr class="body">
                <td>
                    @ClinicModel.ClinicName
                </td>
                <td>
                    @ClinicModel.UnitHouseNo
                </td>
                <td>
                    @ClinicModel.Street
                </td>
                <td>
                    @ClinicModel.Baranggay
                </td>
                <td>
                    @ClinicModel.City
                </td>
                <td>
                    @ClinicModel.ClinicEmail
                </td>
                <td>
                    @ClinicModel.ClinicContactNo
                </td>
                <td>
                    @Html.ActionLink("Update Clinic", "UpdateClinic", new { clinicId = ClinicModel.ClinicID })
                </td>
            </tr>
        }
    </table>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}