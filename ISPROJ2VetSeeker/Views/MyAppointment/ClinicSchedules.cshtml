@model IEnumerable<ISPROJ2VetSeeker.Models.ClinicScheduleUIModel>


@{
    ViewBag.Title = "ClinicSchedules";

}

<h2>Available Schedules</h2>
<br />

@foreach (var item in Model)
{
    <h4><b>@item.ClinicName</b></h4>
    <table class="table">

        <tr>
            <th>
                Date and Time
            </th>
            <th>
                Status
            </th>
            <th>
            </th>
        </tr>

        @foreach (var schedule in item.ScheduleModels)
        {
            <tr>
                <td>
                    @schedule.Date.ToString("MM/dd/yyyy hh:mm tt")
                </td>
                <td>
                    @schedule.Status
                </td>
                <td>
                    @Html.ActionLink("Book", "BookAppointment", new { id = schedule.ScheduleID, specificProblem = "specificProblem" })
                </td>
            </tr>
        }
    </table>
    <br />
}