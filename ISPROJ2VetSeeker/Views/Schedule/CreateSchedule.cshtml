@model ISPROJ2VetSeeker.Models.CreateScheduleUIModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <br />
        <br />
        <h4 style="text-align:center">Create Schedule</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="Create">
            <div class="col-lg-1"></div>
            <div class="col-lg-5">

                <div class="form-group">

                    @Html.LabelFor(model => model.ClinicModels, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.ScheduleModel.ClinicID,
                                    new SelectList(Model.ClinicModels, "ClinicID", "ClinicName"),
                                    "Select from the list...", new { @class = "form-control" })
                    </div>

                    @Html.LabelFor(model => model.ScheduleModel.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ScheduleModel.Date, new { @class = "Date", @id = "datetimeid", Name = "selectedDateTime" })
                        @Html.ValidationMessageFor(model => model.ScheduleModel.Date, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="col-lg-1"></div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

@Styles.Render("~/Style/StyleSheetCreate.css")
<link href="~/Style/StyleSheetCreate.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
