@model ISPROJ2VetSeeker.Models.CreateScheduleUIModel



@{ 
    ViewBag.Title = "Create"; 
    Layout = "~/Views/Shared/_LayoutVet.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <br />
        <br />
        <h4 style="text-align:center">Create Schedule</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="Create">
            <div class="col-lg-1"></div>
            <div class="col-lg-5">

                <div class="form-group">

                    @Html.LabelFor(model => model.ClinicModels, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.ScheduleModel.ClinicID,
                                                                                                          new SelectList(Model.ClinicModels, "ClinicID", "ClinicName"),
                                                                                                          "Select from the list...", new { @class = "form-control" })
                    </div>

                    @Html.LabelFor(model => model.ScheduleModel.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ScheduleModel.Date, "{0:yyyy-MM-ddThh:mm}", new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                        @Html.ValidationMessageFor(model => model.ScheduleModel.Date, "", new { @class = "text-danger" })
                    </div>

                </div>

            </div>

            <div class="col-lg-1"></div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}