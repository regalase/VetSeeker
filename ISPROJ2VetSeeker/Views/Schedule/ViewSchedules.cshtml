@model IEnumerable<ISPROJ2VetSeeker.Models.ViewScheduleUIModel>
@{
    ViewBag.Title = "ViewSchedules";
    Layout = "~/Views/Shared/_LayoutVet.cshtml";
}

@Styles.Render("~/Content/StyleSheetPetRegister.css")
@Styles.Render("~/Content/Table.css")
<link href="~/Content/StyleSheetPetRegister.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Table.css" rel="stylesheet" type="text/css" />
<h2>My Schedule</h2>
<br />
@using (Html.BeginForm())
{


    //render as table
    <table>
        <tr class="head">
            <th width="20%">
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th width="25%">
                Clinic Name
            </th>
            <th width="20%">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>

            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="body">
                <td>
                    @Convert.ToDateTime(item.Date).ToString("MM/dd/yyyy hh:mm tt")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClinicName)
                </td>
                <td>
                    @if (item.Status == "1")
                    {
                        @Html.Raw("Pending");
                    }
                    else if (item.Status == "2")
                    {
                        @Html.Raw("Accepted");
                    }
                    else if (item.Status == "0")
                    {
                        @Html.Raw("Available");
                    }
                    else if (item.Status == "3")
                    {
                        @Html.Raw("Completed");
                    }
                </td>
                @if (item.Status != "0")
                {
                    <td>
                        @Html.ActionLink("View Details", "ViewDetails", new { id = item.ScheduleId })
                    </td>
                }


                @if (item.Status == "0")
                {

                    <td>
                        @Html.ActionLink("Edit", "UpdateSchedule", new { id = item.ScheduleId })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteSchedule", new { id = item.ScheduleId }, new { onclick = "return confirm('Are you sure want to delete this?');" })
                    </td>
                    <td></td>

                }

                else if (item.Status == "1")
                {
                    <td>
                        @Html.ActionLink("Accept", "ManageSchedules", new { id = item.ScheduleId, status = 2 })
                        <!--<input type="button" value="Accept" class="btn-success" />-->
                        <!--<input type="button" value="Decline" class="btn-danger" />-->
                    </td>
                    <td>
                        @Html.ActionLink("Decline", "DeclineSchedule", new { id = item.ScheduleId, status = 0 }, new { onclick = "return confirm('Are you sure want to decline this?');" })
                    </td>

                }

                else if (item.Status == "2")
                {
                    <td>
                        @Html.ActionLink("Cancel", "DeclineSchedule", new { id = item.ScheduleId, status = 0 })
                    </td>
                    <td>
                        @Html.ActionLink("Complete", "CompleteSchedule", new { id = item.ScheduleId, status = 3 })
                    </td>
                }
                else
                {
                    <td></td>

                    <td></td>
                }
            </tr>

        }
    </table>
}