@model ISPROJ2VetSeeker.Models.CreateScheduleUIModel
@{
    ViewBag.Title = "UpdateSchedule";
    Layout = "~/Views/Shared/_LayoutVet.cshtml";
}
@Styles.Render("~/Content/StyleSheetPetRegister.css")
@using (Html.BeginForm("UpdateSchedule", "Schedule", FormMethod.Post, new { enctype = "multipart/form-data", @name = "image" }))
{
    <h4>@Html.ActionLink("< Back", "ViewSchedules")</h4>
    <br />
    <br />
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <br />
        <br />
        <h2 style="text-align:center">Update Schedule</h2>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="Create">
            <div class="col-lg-1"></div>
            <div class="col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.ClinicModels, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.ClinicID,
                                                                  new SelectList(Model.ClinicModels, "ClinicID", "ClinicName"),
                                                                  "Select from the list...", new { @class = "form-control" })
                    </div>
                </div>


                @Html.HiddenFor(model => model.ScheduleModel.ScheduleID)
                @Html.HiddenFor(model => model.ClinicID)
            </div>
            <div class="col-lg-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.ScheduleModel.Date, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ScheduleModel.Date, "{0:yyyy-MM-ddThh:mm}", new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })

                        @Html.ValidationMessageFor(model => model.ScheduleModel.Date, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-lg-1"></div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Update Profile" class="btn btn-default" style="margin-top:30px" />
                </div>
            </div>
        </div>
    </div>}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}